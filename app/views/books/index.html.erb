<p id="notice"><%= notice %></p>

<table class="pretty table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
      <th><%= sortable("Published_Date", "Published_Date")%></th>
      <th colspan="3"></th>
    </tr>
  <thead>

<tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.Title %></td>
      <td><%= book.Author %></td>
      <td><%= book.ISBN %></td>
      <td><%= book.Published_Date.strftime("%B %e, %Y") %></td>
      

      <td><%= link_to 'Show', book, method: :show, class: "btn btn-primary" %></td>
      <td><%= link_to 'Edit', book, method: :edit, class: "btn btn-secondary" %></td>
      <td><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          
    </tr>
    
  <% end %>
</tbody>
</table>